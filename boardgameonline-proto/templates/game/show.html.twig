{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}

<p class="mt-2 text-center fs-3">{{ categoryGame }}</p>

<div class="container">
    <div class="row g-0 bg-light position-relative">
        <!-- -->
        <div class="col-md-6 mb-md-0 p-md-4">

            <div class="position-relative" style="width: 600px; height:400px;">
                <div class="ms-2 position-absolute top-0 start-0 fs-4 text-muted">Game
                    version: {{ game.onlineVersion }}</div>
                <img src="{{ vich_uploader_asset(game, 'imageFile') }}" width="600" height="400">
            </div>
            <div class="positon-absolute bg-primary fs-4 text-center text-light">Note global: X / 5</div>
            <div class="row justify-content-center">
                <div class="col-5">Crée le:</div>
                <div class="col-5">{{ game.createdAt ? game.createdAt|date('d/m/Y') : '' }}</div>
                <div class="col-5">Dernière mise à jour: </div>
{#                <div class="col-5">{{ game.updatedAt ? game.updatedAt|date('Y-m-d H:i') : '' }}</div>#}
                <div class="col-5">{{ game.updatedAt ? game.updatedAt|date('d/m/Y') : '' }}</div>
            </div>

            <div class="row justify-content-around">
{#      Lancer une partie #}
                <div class="col-4">
                    <a href="{{ path('app_gameroom_index', {id: game.id}) }}" class="btn btn-outline-success" title="Lancer une partie"><i class="fa-solid fa-play"></i></a>
                </div>
{#      Ajouter l'option des favoris #}
                {% if game.isUserFavorite(app.user) == false%}
                <div class="col-4">
                    <a href="{{ path('app_game_signup', {id: game.id}) }}" class="btn btn-outline-danger" title="Ajouter aux favoris">
                        <i class="fa-solid fa-heart"></i>
                    </a>
                </div>
                {% else %}
                <div class="col-4">
                    <a href="{{ path('app_game_signup', {id: game.id}) }}" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-heart-crack"></i>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6 p-4 ps-md-0">
            <h2 class="mt-0 text-center">{{ game.name }}</h2>
            <h5 class="mt-3">Description:</h5>
            {{ game.description | raw }}
            <div class="border border-dark">
                <h5 class="text-center">Informations</h5>
                <div class="row justify-content-around ">
                    <div class="col-5">Age conseillé: {{ game.age }} et +</div>
                    <div class="col-5">Durée de jeu: </div>
                    <div class="col-5"></div>
                    <div class="col-5">Min: {{ game.minPlayingTime}} mn / Max: {{ game.maxPlayingTime}} mn</div>
                    <div class="col-5">Joueur Min: {{ game.minPlayer }}</div>
                    <div class="col-5">Joueur Max: {{ game.maxPlayer }}</div>
                    <div class="col-5">RuleVersion: {{ game.ruleVersion }}</div>
                    <!-- Modal pour afficher les règles -->
                    <div class="col-5 mb-2">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#ruleModal">
                            Voir les règles
                        </button>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="ruleModal" tabindex="-1" aria-labelledby="ruleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="ruleModalLabel">Règles du jeu de {{ game.name }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{ game.rules | raw }}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Ajouter la gestion des commentaires-->
{#                    <div class="col-5">Commentaires: <span class="text-primary">(nb_commentaires)</span></div>#}
{#                    <div class="col-5 mb-2">#}
{#                        <button type="button" class="btn btn-primary">Voir les commentaires</button>#}
{#                    </div>#}
                </div>
            </div>
        </div>
    </div>

    {% endblock %}
