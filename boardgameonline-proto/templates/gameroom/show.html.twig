{% extends 'base.html.twig' %}

{% block title %}Gameroom{% endblock %}

{% block body %}
    <h1>Gameroom</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gameroom.id }}</td>
            </tr>
            <tr>
                <th>NbPlayer</th>
                <td>{{ gameroom.nbPlayer }}</td>
            </tr>
            <tr>
                <th>DateInvit</th>
