{% extends 'base.html.twig' %}

{% block title %}BGOproto - Inscription{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-4 text-center">Inscription</h1>
        <div class="w-50 mx-auto">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.email) }}
            <div class="d-flex justify-content-start align-middle">
                <div class="py-auto">{{ form_row(registrationForm.agreeTerms) }}</div>
                <div class="py-2">{{ form_row(registrationForm.termsLink) }}</div>
            </div>

                <button type="submit" class="mt-4 ms-4 btn btn-primary">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
