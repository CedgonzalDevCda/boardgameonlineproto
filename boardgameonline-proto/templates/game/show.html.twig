{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}

<p class="mt-2 text-center fs-3">{{ categoryGame }}</p>

<div class="container">
    <div class="row g-0 bg-light position-relative">
        <!-- -->
        <div class="col-md-6 mb-md-0 p-md-4">

            <div class="position-relative" style="width: 600px; height:400px;">
                <div class="ms-2 position-absolute top-0 start-0 fs-4 text-muted">Game
                    version: {{ game.onlineVersion }}</div>
                <img src="{{ vich_uploader_asset(game, 'imageFile') }}" width="600" height="400">
            </div>
            <div class="positon-absolute bg-primary fs-4 text-center text-light">Note global: X / 5</div>
            <div class="row justify-content-center">
                <div class="col-5">DateCreation</div>
                <div class="col-5">{{ game.dateCreation ? game.dateCreation|date('Y-m-d H:i') : '' }}</div>
                <div class="col-5">DateLastUpdate</div>
                <div class="col-5">{{ game.dateLastUpdate ? game.dateLastUpdate|date('Y-m-d H:i') : '' }}</div>
            </div>

            <div class="row justify-content-around">
                {#                    Lancer une partie #}
                <div class="col-4">
                    <a href="{{ path('app_gameroom_index', {id: game.id}) }}" class="btn btn-outline-success">Lancer une partie</a>
                </div>
                {#                    Ajouter l'option des favoris #}
                {% if game.isUserFavorite(app.user) == false%}
                <div class="col-4">
                    <a href="{{ path('app_game_signup', {id: game.id}) }}" class="btn btn-outline-success">Ajouter aux
                        favoris</a>
                </div>
                {% else %}
                <div class="col-4">
                    <a href="{{ path('app_game_signup', {id: game.id}) }}" class="btn btn-outline-danger">Supprimer des
                        favoris</a>
                </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6 p-4 ps-md-0">
            <h2 class="mt-0 text-center">{{ game.name }}</h2>
            <h5 class="mt-3">Game.description:</h5>
            <p>{{ game.description }}
            </p>
            <div class="border border-dark">
                <h5 class="text-center">Informations</h5>
                <div class="row justify-content-around ">
                    <div class="col-5">Age conseillé: {{ game.age }} et +</div>
                    <div class="col-5">Durée de jeu: game.playingTime mm</div>
                    <div class="col-5">Minimum de joueurs: {{ game.minPlayer }}</div>
                    <div class="col-5">Maximum de joueurs: {{ game.maxPlayer }}</div>
                    <div class="col-5">RuleVersion: {{ game.ruleVersion }}</div>
                    <!-- Modal pour afficher les règles -->
                    <div class="col-5 mb-2">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                            Voir les règles
                        </button>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Règles du jeu de {{ game.name }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{ game.rules }}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">Commentaires: <span class="text-primary">(nb_commentaires)</span></div>
                    <div class="col-5 mb-2">
                        <button type="button" class="btn btn-primary">Voir les commentaires</button>
                    </div>


                </div>
            </div>
        </div>
    </div>

    {% endblock %}
