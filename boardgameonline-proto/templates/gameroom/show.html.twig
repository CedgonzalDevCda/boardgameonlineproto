            </tr>
            <tr>
                <th>HashInvit</th>
                <td>{{ gameroom.hashInvit }}</td>
            </tr>
            <tr>
                <th>HashTimeout</th>
                <td>{{ gameroom.hashTimeout ? gameroom.hashTimeout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Leader</th>
                <td>{{ gameroom.leader }}</td>
            </tr>
        </tbody>
    </table>

