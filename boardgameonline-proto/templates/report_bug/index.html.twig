{% extends 'base.html.twig' %}

{% block title %}BGO-proto - Report de bug{% endblock %}

{% block body %}

    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <h1>Formulaire de report de bug</h1>

        {{ form(form) }}
    </div>

{% endblock %}
